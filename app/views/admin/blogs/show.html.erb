<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @blog.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<p>
  <strong>Photo:</strong>
  <% if @blog.images.present? %>
  	<% @blog.images.each do |image| %>
  		<%= image_tag(image.avatar_url,size: "80x46") %>
  	<% end %>
  <% else %>
  	<p>images are not present</p>
  <% end %>
</p>

<%= link_to 'Edit', edit_admin_blog_path(@blog) %> |
<%= link_to 'Back', admin_blogs_path %>
